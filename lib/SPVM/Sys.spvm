class Sys {
  use Sys::Stat;
  
  native static method rmdir : int ($file : string);
  native static method unlink : int ($file : string);
  
  static method unlink_list : int ($files : string[]...) {
    unless ($files) {
      return 0;
    }
    my $count = 0;
    for (my $i = 0; $i < @$files; $i++) {
      my $file = $files->[$i];
      my $success = &unlink($file);
      if ($success) {
        $count++;
      }
    }
    
    return $count;
  }
}
